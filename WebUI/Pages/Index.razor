@page "/"
@layout AuthorizedPagesLayout
@using ConestogaInsidersClub.Data.Models;
@using ConestogaInsidersClub.Data.DataAccess;
@using ConestogaInsidersClub.Pages.ViewModels;

@inject IGameService gameService;
@inject ICartService cartService;

<h1>Conestoga Insiders Club</h1>
<p>Your source of the latest games and events</p>
<hr />

@if (showDetails)
{
    <br />
    <h3>Game Details</h3>
    <br />
    <table>
        <tr>
            <td>Name: </td>
            <td class="align-content-end"><span id="Game_Name">@game.Name</span></td>
        </tr>
        <tr>
            <td>Description: </td>
            <td><span id="Game_Name">@game.Description</span></td>
        </tr>
        <tr>
            <td>Price: </td>
            <td><span id="Game_Name">@game.Price.ToString("C")</span></td>
        </tr>
        <tr>
            <td>Genre: </td>
            <td><span id="Game_Name">@game.Genre</span></td>
        </tr>
    </table>
    <br />
    @if (!IsGameInCart(game.GameId))
    {
        <button class="btn btn-primary mr-1" @onclick="@(() => AddToCart(game.GameId))">Add To Cart</button>
    }
    <button class="btn btn-primary">Add To Wishlist</button>
    <button class="btn btn-primary">Leave Review</button>
    <button class="btn btn-secondary" @onclick="ToggleDetailsVisibility">Go Back</button>
}
else if (games != null && games.Count != 0)
{
    <h3 class="mt-2">Games</h3>
    <p>Below you can find a selection of our available games.</p>
    <div class="row p-1 mt-2">
        @foreach (var game in games)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text float-right">Price: @game.Price.ToString("C")</p>
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text">@game.Description</p>
                        <button class="btn btn-primary" @onclick="() => DisplayDetails(game)">View Details</button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <br />
    <h3>No games available... =(</h3>
}

@code {
    #region Declarations
    [CascadingParameter(Name = "user")]
    protected ApplicationUser user { get; set; }
    private Game game = new Game();
    private List<Game> games;
    private List<CartItem> cartItems;
    private bool showDetails = false;
    #endregion

    protected override async Task OnInitializedAsync()
    {
        cartItems = await cartService.GetCartItems(user.Id);
        games = await gameService.GetGames();
    }

    private void DisplayDetails(Game game)
    {
        this.game = game;
        ToggleDetailsVisibility();
    }

    private bool IsGameInCart(int gameId)
    {
        return cartItems.FirstOrDefault(g => g.GameId == gameId) == null ? false : true;
    }

    private async void AddToCart(int gameId)
    {
        CartItem cartItem = new CartItem { UserId = user.Id, GameId = gameId };
        await cartService.AddCartItem(cartItem);
    }

    private void ToggleDetailsVisibility()
    {
        showDetails = !showDetails;
    }
}
