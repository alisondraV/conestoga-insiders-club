@inherits LayoutComponentBase
@attribute [Authorize]

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <div class="content px-4">
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <h3 id="Unauthorized_View">
                        You can't view this page unless you're authorized
                    </h3>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>